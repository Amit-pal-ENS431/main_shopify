
<div>
  <h2>
    {{ section.settings.heading }}

  </h2>
  <div>
    <img src=" {{ section.settings.image_picker | img_url:'' }}">
  </div>
    <div>
      <h2 class="heading_1">
         {{ section.settings.heading_2 }}
      </h2>
      <p> {{ section.settings.paragragh }}</p>

      <a href="{{ section.settings.button_url }}">
                 <p> {{ section.settings.button_text }}</p>
      </a>
      
        
      
    </div>
</div>

{% schema %}
  {
    "name": "Image-With-Text",
    "settings": [
       {
         "type": "text",
         "id": "main_heading",
         "label": "Heading",
         "default": "Heading Of Image With Text Section"
       },
       {
         "type": "image_picker",
         "id": "image_picker",
         "label": "Select Image",
       },

        {
            "type": "text",
            "id": "heading_2",
            "label": "Heading 2",
            "default": "Quick links"
        },
        {
             "type": "text",
             "id": "paragragh",
             "label": "Discription",
        },
       {
             "type": "text",
             "id": "button_text",
             "label": "Button",
         
        },
      {
             "type": "url",
             "id": "button_url",
             "label": "url",
         
        },      
    ],
      "presets": [
      {
        "name": "Image Text Section"
      }
    ]
  }
{% endschema %}