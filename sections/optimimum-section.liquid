<section class="bg-white px-6 py-10 relative">
  <div class="flex flex-col md:flex-row items-center justify-between max-w-7xl mx-auto">
    <!-- Left Content -->
    <div class="md:w-1/2 text-center md:text-left space-y-4">
      <h2 class="text-red-600 text-3xl font-extrabold">
        {{ section.settings.main_heading }}
      </h2>
      <p class="text-sm text-gray-800">
        {{ section.settings.sub_heading }}
      </p>
      <p class="text-xs text-gray-500">
        {{ section.settings.note_text }}
      </p>
    </div>

    <!-- Product Images -->
    <div class="md:w-1/2 flex items-center justify-center gap-6 mt-6 md:mt-0">
      {% if section.settings.product_image1 %}
        <img src="{{ section.settings.product_image1 | image_url }}" alt="Product 1" class="w-28 md:w-36" width="100%"height="auto">
      {% endif %}
      {% if section.settings.product_image2 %}
        <img src="{{ section.settings.product_image2 | image_url }}" alt="Product 2" class="w-28 md:w-36" width="100%"height="auto">
      {% endif %}
      {% if section.settings.shaker_image %}
        <div class="relative">
          <img src="{{ section.settings.shaker_image | image_url }}" alt="Free Shaker" class="w-20 md:w-28" width="100%"height="auto">
          <div class="absolute top-0 right-0 bg-yellow-400 text-xs px-2 py-1 font-bold rounded-full">
            FREE<br>SHAKER
          </div>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Limited Time Offer -->
  <div class="text-center mt-6">
    <p class="text-xl font-semibold">{{ section.settings.limited_offer_text }}</p>
    <a href="{{ section.settings.button_link }}" class="inline-block mt-4 bg-black text-white px-6 py-3 rounded-full text-lg hover:bg-gray-800 transition">
      {{ section.settings.button_label }}
    </a>
  </div>

  <!-- Close Button for Popup-like behavior -->
  <button class="absolute top-4 right-4 text-3xl leading-none text-gray-500 hover:text-gray-800" onclick="this.closest('section').remove()">Ã—</button>
</section>

{% schema %}
{
  "name": "Promo Free Shaker",
  "settings": [
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "GET A FREE SHAKER"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "on every purchase of Gold Standard 100% Whey Double Rich Chocolate and Vanilla Ice Cream*"
    },
    {
      "type": "text",
      "id": "note_text",
      "label": "Note Text",
      "default": "*Applicable on 2lbs & 5lbs till stocks last"
    },
    {
      "type": "image_picker",
      "id": "product_image1",
      "label": "Product Image 1"
    },
    {
      "type": "image_picker",
      "id": "product_image2",
      "label": "Product Image 2"
    },
    {
      "type": "image_picker",
      "id": "shaker_image",
      "label": "Shaker Image"
    },
    {
      "type": "text",
      "id": "limited_offer_text",
      "label": "Limited Time Offer Text",
      "default": "Limited time offer!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Promo Banner with Free Shaker"
    }
  ]
}
{% endschema %}
